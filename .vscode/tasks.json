{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build-api",
			"dockerBuild": {
				"tag": "bw-code-sample-api:latest",
				"dockerfile": "${workspaceFolder}/api/Dockerfile",
				"context": "${workspaceFolder}/api",
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/api/api.csproj"
			}
		},
		{
			"type": "shell",
			"label": "compose-up-api",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": [
				"docker-build-api"
			],
			"command": "docker compose up api -d",
			"problemMatcher": []
		}
	]
}