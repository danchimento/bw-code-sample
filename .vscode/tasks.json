{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch api",
			"type": "process",
			"command": "dotnet",
			"args": [
				"watch",
				"run"
			],
			"options":{
				"cwd": "${workspaceFolder}/api"
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"type": "process",
			"label": "install app deps",
			"command": "yarn",
			"options": {
				"cwd": "${workspaceFolder}/app"
			},
			"args": [
				"install",
			],
			"problemMatcher": []
		},
		{
			"type": "process",
			"label": "watch app",
			"dependsOn":["install app deps"],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"command": "yarn",
			"options": {
				"cwd": "${workspaceFolder}/app"
			},
			"args": [
				"run",
				"start"
			],
			"problemMatcher": []
		}
	]
}